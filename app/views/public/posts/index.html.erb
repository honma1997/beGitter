<div class="container">
  <div class="row">
    <!-- メインコンテンツ：投稿一覧 (9列分を使用) -->
    <div class="col-md-9 order-md-2">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">投稿一覧</h1>
        <% if user_signed_in? %>
          <% if current_user.guest? %>
            <div class="d-flex align-items-center">
              <span class="badge bg-warning text-dark me-2">ゲストユーザー制限</span>
              <%= link_to new_user_registration_path, class: "btn btn-sm btn-outline-primary" do %>
                <i class="fas fa-user-plus me-1"></i> 新規登録して投稿
              <% end %>
            </div>
          <% else %>
            <%= link_to new_post_path, class: "btn btn-primary" do %>
              <i class="fas fa-plus-circle me-1"></i> 新規投稿
            <% end %>
          <% end %>
        <% end %>
      </div>

      <% if user_signed_in? && current_user.guest? %>
        <div class="alert alert-info mb-4">
          <h5><i class="fas fa-info-circle"></i> ゲストユーザーの制限について</h5>
          <p class="mb-0">ゲストユーザーは閲覧のみ可能です。投稿、コメント、いいね、フォローなどの機能を使用するには、<%= link_to "新規登録", new_user_registration_path, class: "alert-link" %>をお願いします。</p>
        </div>
      <% end %>

      <%# 検索結果情報の表示 %>
      <% if @keyword.present? || @selected_tag_ids.present? || @selected_user_id.present? || @start_date.present? || @end_date.present? %>
        <div class="search-result-info alert alert-info mb-3">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h5 class="mb-2">検索条件</h5>
              <ul class="mb-1 ps-3">
                <% if @keyword.present? %>
                  <li>キーワード: <%= @keyword %></li>
                <% end %>

                <% if @selected_tag_ids.present? %>
                  <% selected_tags = Tag.where(id: @selected_tag_ids) %>
                  <li>タグ:
                    <% selected_tags.each do |tag| %>
                      <span class="badge bg-secondary"><%= tag.name %></span>
                    <% end %>
                  </li>
                <% end %>

                <% if @selected_user_id.present? %>
                  <li>投稿者: <%= User.find_by(id: @selected_user_id)&.name || '不明なユーザー' %></li>
                <% end %>

                <% if @start_date.present? || @end_date.present? %>
                  <li>期間:
                    <%= @start_date&.strftime('%Y/%m/%d') || '指定なし' %> 〜
                    <%= @end_date&.strftime('%Y/%m/%d') || '指定なし' %>
                  </li>
                <% end %>
              </ul>
              <p class="mt-2 mb-0">検索結果: <%= @posts.total_count %>件</p>
            </div>

            <div>
              <%= link_to posts_path, class: "btn btn-sm btn-outline-secondary" do %>
                <i class="fas fa-undo"></i> リセット
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <%# 投稿一覧表示部分 %>
      <div class="posts-container">
        <% if @posts.present? %>
          <%# 投稿がある場合、カード形式で表示 %>
          <% @posts.each do |post| %>
            <div class="card mb-3">
              <div class="card-body">
                <div class="row">
                  <%# 投稿画像があれば左側に表示（小さめのサムネイル） %>
                  <% if post.image.attached? %>
                    <div class="col-md-3 mb-3 mb-md-0">
                      <%= image_tag post.thumbnail, class: "img-fluid rounded post-thumbnail", style: "width: 100%; height: 140px; object-fit: cover;" %>
                    </div>
                    <div class="col-md-9">
                  <% else %>
                    <div class="col-12">
                  <% end %>
                    <%# 投稿タイトル（詳細へのリンク） %>
                    <h5 class="card-title mb-2">
                      <%= link_to post.title, post_path(post), class: "text-decoration-none" %>
                    </h5>

                    <%# 投稿者情報 %>
                    <div class="d-flex align-items-center mb-2">
                      <% if post.user.profile_image.attached? %>
                        <%= image_tag post.user.profile_image, class: "rounded-circle me-2", style: "width: 30px; height: 30px; object-fit: cover;" %>
                      <% else %>
                        <div class="bg-light rounded-circle d-flex justify-content-center align-items-center me-2" style="width: 30px; height: 30px;">
                          <i class="fas fa-user text-secondary"></i>
                        </div>
                      <% end %>
                      <span><%= post.user.name %> さん</span>
                      <span class="ms-2 badge bg-info text-white"><%= post.user.phase_in_japanese %></span>
                    </div>

                    <%# 投稿本文（見やすくするため段落を適切に表示、100文字で切り詰め） %>
                    <div class="card-text mb-3 post-content">
                      <%# 本文の先頭150文字を表示し、改行を保持する %>
                      <% truncated_content = strip_tags(post.body).truncate(150, separator: ' ', omission: '...') %>
                      <% paragraphs = truncated_content.split("\n").reject(&:blank?) %>
                      <% paragraphs.each do |paragraph| %>
                        <p class="mb-1 text-secondary"><%= paragraph %></p>
                      <% end %>
                    </div>

                    <%# タグ一覧 %>
                    <div class="post-tags mb-2">
                      <% post.tags.each do |tag| %>
                        <span class="badge bg-secondary"><%= tag.name %></span>
                      <% end %>
                    </div>

                    <%# 投稿日時とアクション %>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                      <div class="text-muted small">
                        <i class="far fa-calendar-alt me-1"></i><%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
                        <span class="ms-2"><i class="far fa-heart me-1"></i><%= post.likes.count %></span>
                        <span class="ms-2"><i class="far fa-comment me-1"></i><%= post.comments.count %></span>
                      </div>
                      <%= link_to "詳細を見る", post_path(post), class: "btn btn-sm btn-outline-primary" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <%# ページネーションの表示 %>
          <div class="pagination-container">
            <div class="pagination-info">
              <%= "全#{@posts.total_count}件中 #{@posts.offset_value + 1}〜#{@posts.offset_value + @posts.length}件表示" %>
            </div>
            <div class="d-flex justify-content-center">
              <%= paginate @posts %>
            </div>
          </div>
        <% else %>
          <%# 投稿がない場合のメッセージ %>
          <div class="alert alert-info">
            <p class="mb-0">投稿がありません。最初の投稿をしてみましょう！</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- サイドバー：検索機能 (3列分を使用) -->
    <div class="col-md-3 order-md-1">
      <div class="card sticky-top" style="top: 20px; z-index: 1;">
        <div class="card-header bg-light">
          <h5 class="mb-0"><i class="fas fa-search me-2"></i>検索</h5>
        </div>
        <div class="card-body">
          <%= form_with url: search_posts_path, method: :get, local: true do |f| %>
            <!-- キーワード検索 -->
            <div class="mb-3">
              <label class="form-label">キーワード</label>
              <%= f.text_field :keyword, value: @keyword, class: "form-control form-control-sm", placeholder: "タイトル・本文" %>
            </div>

            <!-- タグ検索 -->
            <div class="mb-3">
              <label class="form-label">タグ</label>
              <% if @tags.present? %>
                <%= f.select :tag_ids,
                            @tags.map{ |tag| [tag.name, tag.id] },
                            { include_blank: "選択してください", selected: @selected_tag_ids },
                            { class: "form-select form-select-sm" } %>
              <% end %>
            </div>

            <!-- ユーザー検索 -->
            <div class="mb-3">
              <label class="form-label">投稿者</label>
              <%= f.select :user_id,
                          @users.map{ |user| [user.name, user.id] },
                          { include_blank: "選択してください", selected: @selected_user_id },
                          { class: "form-select form-select-sm" } %>
            </div>

            <!-- 期間検索 -->
            <div class="mb-3">
              <label class="form-label">期間</label>
              <div class="input-group input-group-sm mb-2">
                <%= f.date_field :start_date, value: @start_date, class: "form-control form-control-sm" %>
                <span class="input-group-text">〜</span>
                <%= f.date_field :end_date, value: @end_date, class: "form-control form-control-sm" %>
              </div>
            </div>

            <!-- クイック期間 -->
            <div class="mb-3">
              <label class="form-label">クイック期間</label>
              <div class="d-flex flex-wrap gap-1">
                <%= link_to "今日", search_posts_path(keyword: @keyword, tag_ids: @selected_tag_ids, user_id: @selected_user_id, start_date: Date.today, end_date: Date.today), class: "btn btn-outline-secondary btn-sm" %>
                <%= link_to "今週", search_posts_path(keyword: @keyword, tag_ids: @selected_tag_ids, user_id: @selected_user_id, start_date: Date.today.beginning_of_week, end_date: Date.today), class: "btn btn-outline-secondary btn-sm" %>
                <%= link_to "今月", search_posts_path(keyword: @keyword, tag_ids: @selected_tag_ids, user_id: @selected_user_id, start_date: Date.today.beginning_of_month, end_date: Date.today), class: "btn btn-outline-secondary btn-sm" %>
              </div>
            </div>

            <!-- 検索ボタン -->
            <div class="d-grid gap-2">
              <%= f.submit "検索", class: "btn btn-primary btn-sm" %>
              <%= link_to "リセット", posts_path, class: "btn btn-outline-secondary btn-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
